{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    
    "shifts": {
      ".indexOn": ["date"]
    },
    
    "shiftMovements": {
      ".indexOn": ["shiftId"]
    },
    
    "shiftIncidents": {
      ".indexOn": ["shiftId"]
    },
    
    "salaries": {
      ".indexOn": ["employeeId", "year"]
    },
    
    "licenses": {
      ".indexOn": ["employeeId", "year"]
    },
    
    "vacations": {
      ".indexOn": ["employeeId", "year"]
    },
    
    "aguinaldo": {
      ".indexOn": ["employeeId", "year"]
    },
    
    "employees": {
      ".indexOn": ["name"]
    }
  }
}
